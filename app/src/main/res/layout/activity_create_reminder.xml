<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  tools:layout_editor_absoluteX="-28dp"
  tools:layout_editor_absoluteY="-24dp"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".CreateReminder">

  <EditText
    android:id="@+id/name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="65dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Name"/>
  <EditText
    android:id="@+id/startTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="101dp"
    android:ems="10"
    android:inputType="time"
    android:layout_below="@+id/name"
    android:layout_alignParentStart="true"/>
  <EditText
    android:id="@+id/endTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/startTime"
    android:ems="10"
    android:inputType="time"
    android:layout_toEndOf="@+id/startTime"/>
  <TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="30dp"
    android:layout_above="@+id/endTime"
    android:layout_alignParentStart="true"
    android:text="Start Time"
    tools:text="Disable Start Time"/>
  <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Disable Start Time"
    tools:text="Start Time"
    android:layout_alignBaseline="@+id/textView3"
    android:layout_alignBottom="@+id/textView3"
    android:layout_toEndOf="@+id/startTime"
    android:layout_marginStart="18dp"/>
  <TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="51dp"
    android:text="How Often to Ring?"
    android:layout_below="@+id/startTime"
    android:layout_centerHorizontal="true"/>
  <EditText
    android:id="@+id/interval"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="38dp"
    android:layout_above="@+id/create"
    android:layout_alignEnd="@+id/textView4"
    android:ems="10"
    android:inputType="number"/>
  <Button
    android:id="@+id/create"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="17dp"
    android:layout_alignParentBottom="true"
    android:layout_toEndOf="@+id/textView3"
    android:elevation="0dp"
    android:text="Create"
    android:onClick="onClick"
    android:clickable="true"
    tools:text="Create"/>

</RelativeLayout>
